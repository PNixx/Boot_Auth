<?
/**
 * @type Boot_View         $this
 * @var ActiveRecord       $resource
 */
use Boot\Auth\Routes;
?>
<h1><?= $this->t("Sign In") ?></h1>

<? if( $resource->errors->count() ): ?>
	<ul>
		<? foreach( $resource->errors->messages() as $error ): ?>
			<li><?= $error ?></li>
		<? endforeach ?>
	</ul>
<? endif ?>

<? $f = new Boot_Form_Lib(Routes::getName(), $resource, ['method' => 'post', 'action' => $this->{Routes::getName() . "_login_path"}()]) ?>
	<div class="form-group">
		<?= $f->input('email', ['as' => 'email', 'required' => 'required', 'class' => 'form-control']) ?>
	</div>
	<div class="form-group">
		<?= $f->input('password', ['as' => 'password', 'required' => 'required', 'class' => 'form-control']) ?>
	</div>
	<?= $f->submit('Sign In', ['class' => 'btn btn-primary']) ?>
<? $f->end() ?>

<?= $this->render('shared/_links') ?>
